<article id="<%= post.layout %>-<%= post._id %>" class="article article-type-<%= post.layout %>" itemscope
         itemprop="blogPost">
    <div class="article-inner">
        <%- partial('post/gallery') %>
        <% if ((
               is_home() || is_archive() || is_category() || is_tag()
               )
               && (
                post.link || post.title
                )){ %>
        <header class="article-header">
            <i class="fa fa-file-text-o"></i>
            <%- partial('post/title', {class_name: 'article-title'}) %>
            <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
        </header>
        <% } %>
        <div class="article-entry" itemprop="articleBody">
            <% if (is_home() || is_archive() || is_category() || is_tag()){ %>
            <% if (post.excerpt && index){ %>
            <!--<%- thumbnail(post.content, 'thumbnail') %>-->
            <%- post_home(post.excerpt) %>
            <% if (theme.excerpt_link){ %>
            <p class="article-more-link">
                <a href="<%- config.root %> <%- post.path %>#more"><%= theme.excerpt_link %></a>
            </p>
            <% } %>
            <% } else { %>
            <%- post_home(post.content) %>
            <% } %>
            <footer class="article-footer">

                <% if (post.comments && config.disqus_shortname){ %>
                <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link">Comments</a>
                <% } %>
                <%- partial('post/category') %>
                <%- partial('post/tag') %>
                <div style="margin-top:4px;margin-left:20px;text-align:center;" class="addthis_sharing_toolbox"
                     data-url="<%- post.permalink %>" data-id="<%= post._id %>" data-title="<%- post.title %>"
                     data-summary="<%- post_summary(strip_html(post.content), 160) %>" class="article-share-link"></div>
            </footer>
            <% } else if (is_wiki()){ %>
            <%- post.content %>
            <% } else { %>
            <%- post_toc(post.content) %>
            <% } %>
        </div>
    </div>
</article>


<% if (!index && post.comments && config.disqus_shortname && comment){ %>

<div style="margin-top:4px;margin-left:20px;text-align:center;" class="addthis_sharing_toolbox"
     data-url="<%- post.permalink %>" data-id="<%= post._id %>" data-title="<%- post.title %>"
     data-summary="<%- post_summary(strip_html(post.content), 160) %>" class="article-share-link"></div>

<section id="comments">
    <div id="disqus_thread">
        <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by
                Disqus.</a></noscript>
    </div>
</section>
<% } %>
